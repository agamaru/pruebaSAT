{% extends 'layout.html.twig' %}

{% block title %}Router{% endblock %}

{% block content %}
    <h1>Listado de routers</h1>

    {% if routers is not empty %}
    <table class="table table-bordered table-hover table-striped table-responsive-sm">
        <thead>
            <tr>
                <th>IP</th>
                <th>Usuario</th>
                <th>Contrase√±a</th>
                <th>WEP</th>
                <!--<th>Puntos de acceso</th>
                <th>Cliente</th>-->
            </tr>
        </thead>
        <tbody>
            {% for router in routers %}
            <tr>
                <td>{{ router.ip }}</td>
                <td>{{ router.usuario }}</td>
                <td>{{ router.password }}</td>
                <td>{{ router.wep }}</td>

            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No hay softwares que mostrar</p>
    {% endif %}
{% endblock %}
